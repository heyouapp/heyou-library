{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react-native",
        "lib": ["es6"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "outDir": "./lib",
        "paths": {
            "*": ["./src/*"]
        },
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "lib"
    ]
}
