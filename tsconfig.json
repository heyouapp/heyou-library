{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "lib": ["es5", "es2015", "es2017", "dom"],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "*": ["./src/*"]
        },
        "outDir": "./lib",
        "strict": true,
        "incremental": true,
        "esModuleInterop": true,
        "declaration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "plugins": [
            {
                "transform": "typescript-transform-paths",
                "afterDeclarations": true
            }
        ],
        "rootDirs": ["src", "test", "stories"]
    },
    "include": ["src/**/*"]
}
